<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BathroomCreate">

    <Button
        android:id="@+id/Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:backgroundTint="#FFCCCB"
        android:textColor="#35378f"
        android:textSize="10dp"
        android:text="Cancel"/>

    <TextView
        android:id="@+id/reviewHeader"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:text="You are making a new bathroom:"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/buildingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:layout_marginStart="15dp"
        android:text="Building name: "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/building"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:layout_marginStart="142dp"
        android:textColorHint="#aaaaaa"
        android:hint="Start here..."
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/floorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:layout_marginStart="15dp"
        android:text="Floor: "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/floor"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:layout_marginStart="68dp"
        android:textAlignment="center"
        android:textColorHint="#aaaaaa"
        android:hint="#"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/numStallsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:layout_marginStart="15dp"
        android:text="Stalls: "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/numStalls"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:layout_marginStart="72dp"
        android:textAlignment="center"
        android:textColorHint="#aaaaaa"
        android:hint="#"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/numUrinalsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="215dp"
        android:layout_marginStart="15dp"
        android:text="Urinals: "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/numUrinals"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="215dp"
        android:layout_marginStart="82dp"
        android:textAlignment="center"
        android:textColorHint="#aaaaaa"
        android:hint="#"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/genderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="245dp"
        android:layout_marginStart="15dp"
        android:text="Gender: "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="245dp"
        android:layout_marginStart="83dp"/>

    <TextView
        android:id="@+id/locDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="275dp"
        android:layout_marginStart="15dp"
        android:text="Where can you find the bathroom: "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/locDescription"
        android:background="@null"
        android:layout_width="380dp"
        android:layout_height="475dp"
        android:layout_marginTop="305dp"
        android:layout_marginStart="15dp"
        android:textColorHint="#aaaaaa"
        android:hint="Start here..."
        android:gravity="top"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="785dp"
        android:backgroundTint="#eeeeee"
        android:textColor="#35378f"
        android:text="Create Bathroom" />
</RelativeLayout>