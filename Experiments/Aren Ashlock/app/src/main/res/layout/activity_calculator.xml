<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator"
    android:background="#FFAA00">

    <TextView
        android:id="@+id/nameDisplay"
        android:layout_width="415dp"
        android:layout_height="wrap_content"
        android:background="#C0C0C0"
        android:text="Hello user!"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/logoutInput"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#949494"
        android:text="Log Out"/>

    <TextView
        android:id="@+id/calcDisplay"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginStart="100dp"
        android:background="#C0C0C0"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <Button
        android:id="@+id/input1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="350dp"
        android:backgroundTint="#949494"
        android:text="1"/>

    <Button
        android:id="@+id/input2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="350dp"
        android:backgroundTint="#949494"
        android:text="2"/>

    <Button
        android:id="@+id/input3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="350dp"
        android:backgroundTint="#949494"
        android:text="3"/>

    <Button
        android:id="@+id/input4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="#949494"
        android:text="4"/>

    <Button
        android:id="@+id/input5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="#949494"
        android:text="5"/>

    <Button
        android:id="@+id/input6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="#949494"
        android:text="6"/>

    <Button
        android:id="@+id/input7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="450dp"
        android:backgroundTint="#949494"
        android:text="7"/>

    <Button
        android:id="@+id/input8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="450dp"
        android:backgroundTint="#949494"
        android:text="8"/>

    <Button
        android:id="@+id/input9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="450dp"
        android:backgroundTint="#949494"
        android:text="9"/>

    <Button
        android:id="@+id/inputMinus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="#949494"
        android:text="-"/>

    <Button
        android:id="@+id/input0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="#949494"
        android:text="0"/>

    <Button
        android:id="@+id/inputPlus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="#949494"
        android:text="+"/>

    <ImageView
        android:id="@+id/star1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="600dp"
        android:visibility="visible"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/star2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="600dp"
        android:visibility="visible"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/star3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="600dp"
        android:visibility="visible"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/star4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="235dp"
        android:layout_marginTop="600dp"
        android:visibility="visible"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/star5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="310dp"
        android:layout_marginTop="600dp"
        android:visibility="visible"
        app:srcCompat="@drawable/star" />

</RelativeLayout>